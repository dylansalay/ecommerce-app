<div id="<%= dom_id comment %>" class="ms-2 me-auto comment">
  <li class="list-group-item justify-content-between align-items-start">
    <div>
      <span class="font-weight-bold"> <%= comment_user(comment) %> </span>
      <span class="font-italic pull-right"> <%= comment.created_at.strftime('%B %d %Y') %> </span>
    </div>
    <br>
    <div>
      <%= comment.content %>
    </div>
  </li>
</div>
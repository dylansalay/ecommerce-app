<div id="<%= dom_id comment %>" class="ms-2 me-auto comment">
  <div>
    <span class="font-weight-bold"> <%= comment.user.name %> </span>
    <span class="font-italic pl-2"> <%= comment.created_at.strftime('%B %d %Y') %> </span>
  </div>
  <div class="pt-2">
    <%= comment.content %>
  </div>
</div>
<%= form_with(model: inventory_item, local: true) do |form| %>
  <% if inventory_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(inventory_item.errors.count, "error") %> prohibited this inventory_item from being saved:</h2>

      <ul>
        <% inventory_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title, class: 'pull-left' %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group mt-3">
        <%= form.label :subtitle, class: 'pull-left' %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>


      <div class="form-group mt-3">
        <%= form.label :unit_cost, class: 'pull-left' %>
        <%= form.text_field :unit_cost, class: 'form-control' %>
      </div>

      <div class="form-group pull-left mt-3">
        <label class='btn btn-primary'>
          Upload image files <%= form.file_field :images, multiple: true, style: 'display:none' %>
        </label>
      </div>

      <div class="form-group pull-left mt-3">
        <label class='btn btn-primary'>
          Upload a thumb image file <%= form.file_field :thumb_image, style: 'display:none' %>
        </label>
      </div>

      <div class="form-group pull-left mt-3">
        <%= form.label :category, class: 'block', style: 'text-align:left' %>
        <%= form.collection_select(:category_id, Category.all, :id, :title) %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 13 %>
      </div>
    </div>

    <div class="col-md-12">
      
      <div class="form-group">
        <%= form.submit 'Save Inventory Item', class: 'btn btn-primary btn-block mt-5' %>
      </div>
    </div>    
  </div>
<% end %>

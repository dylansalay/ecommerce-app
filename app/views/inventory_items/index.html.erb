<p id="notice"><%= notice %></p>

<h1>Inventory Items</h1>

<%= link_to 'New Inventory Item', new_inventory_item_path if logged_in?(:site_admin) %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Body</th>
      <th>Unit cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventory_items.each do |inventory_item| %>
      <%= render @inventory_items %>
    <% end %>
  </tbody>
</table>

<br>

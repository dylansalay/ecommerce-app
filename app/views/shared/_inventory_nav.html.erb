<div class="nav-wrapper">
  <div class="inventory-masthead">
    <div class="container">
      <nav class="navbar">
        <%= link_to "posy", root_path, class: "navbar-title nav-link" %>
        <%= link_to "about", about_path, class: 'nav-link' %>
        <%= link_to "contact", contact_path, class: 'nav-link' %>
        <%= link_to "inventory", inventory_items_path, class: 'nav-link' %>
          <div class="nav-item dropdown-container col-md-1">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">
              <i class="fas fa-cart-plus"></i>
                <span class="badge <%= 'active' unless load_shopping_cart.cart_items.count.zero? %> "> <%= inventory_badge_helper %> </span>
            </a>
            <div class="dropdown-menu dropdown">
              <%= render partial: 'shopping_carts/shopping_cart_summary', locals: { shopping_cart: load_shopping_cart } %>
            </div>
        </div>
        <div class="nav-item dropdown-container col-md-1">
          <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><%= auth_dropdown_helper %></a>
            <div class="dropdown-menu dropdown">
              <%= login_helper 'dropdown-item ml-0 nav-link' %>
            </div>
        </div>
      </nav>
    </div>
  </div>
</div>
<div class="container inventory-notices <%= 'hide' unless notice %>">
  <div class="alert alert-primary alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  </div>
</div>
